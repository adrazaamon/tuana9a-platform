#!/bin/bash

export VAULT_ADDR="https://vault.tuana9a.com"
export CLOUDFLARE_ACCOUNT_ID=$(vault kv get -format=json kv/cloudflare/r2/admin | jq -r '.data.cloudflare_account_id')
export S3_ENDPOINT_URL=https://$CLOUDFLARE_ACCOUNT_ID.r2.cloudflarestorage.com
export AWS_ACCESS_KEY_ID=$(vault kv get -format=json kv/cloudflare/r2/admin | jq -r '.data.aws_access_key_id')
export AWS_SECRET_ACCESS_KEY=$(vault kv get -format=json kv/cloudflare/r2/admin | jq -r '.data.aws_secret_access_key')
export AWS_DEFAULT_REGION=auto
